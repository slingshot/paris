{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "rootDir": "src",
    "noEmit": false,
    "incremental": false
  },
  "include": [
    "src/stories/**/*.ts",
    "src/stories/**/*.tsx",
    "src/types/**/*.ts",
    "src/helpers/**/*.ts",
    "src/helpers/**/*.tsx",
    "src/scss.d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.stories.ts",
    "**/*.stories.tsx",
    "**/*.test.ts",
    "**/*.test.tsx",
    "dist"
  ]
}
