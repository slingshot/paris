{
    "name": "paris",
    "author": "Sanil Chawla <sanil@slingshot.fm> (https://sanil.co)",
    "description": "Paris is Slingshot's React design system. It's a collection of reusable components, design tokens, and guidelines that help us build consistent, accessible, and performant user interfaces.",
    "version": "0.16.2",
    "type": "module",
    "homepage": "https://paris.slingshot.fm",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/slingshot/paris"
    },
    "main": "./dist/index.js",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "sideEffects": [
        "**/*.css"
    ],
    "files": [
        "dist",
        "README.md",
        "CHANGELOG.md"
    ],
    "keywords": [
        "react",
        "design system",
        "rsc",
        "server components",
        "ui",
        "components",
        "typescript",
        "nextjs",
        "storybook"
    ],
    "scripts": {
        "build": "pnpm build:lib && pnpm build:types && pnpm build:global-css",
        "build:lib": "pnpm generate:exports && vite build",
        "build:types": "tsc -p tsconfig.build.json",
        "build:global-css": "sass src/stories/theme/global.scss dist/stories/theme/global.css --style=compressed",
        "storybook": "storybook dev -p 6006",
        "build:storybook": "storybook build",
        "create:component": "node ./scripts/createComponent.cjs",
        "generate:exports": "node ./scripts/generateExports.cjs",
        "generate:theme": "pte export ./src/stories/theme/themes.ts LightTheme -o ./public/pte.css",
        "generate:text": "ts-node --esm ./scripts/text.ts",
        "release": "pnpm build && pnpm changeset publish",
        "prepare": "husky install",
        "lint": "eslint .",
        "prepublishOnly": "pnpm build"
    },
    "packageManager": "pnpm@8.15.5",
    "engines": {
        "node": ">=22.0.0"
    },
    "exports": {
        "./theme/global.css": "./dist/stories/theme/global.css",
        "./accordion": {
